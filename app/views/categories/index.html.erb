<h1><%= t('categories.index.title') %></h1>
<%= link_to t('categories.index.new_category'), new_category_path, class: "btn btn-primary mb-3" %>

<ul class="list-group">
  <% @categories.each do |category| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= I18n.locale == :bn ? category.name_bn : category.name_en %>
      <div>
        <%= link_to t('products.index.details'), category_path(category), class: "btn btn-sm btn-outline-primary" %>
        <%= link_to t('products.show.edit'), edit_category_path(category), class: "btn btn-sm btn-warning" %>
        <%= link_to t('products.show.delete'), category_path(category), method: :delete, data: { confirm: t('messages.confirm_delete') }, class: "btn btn-sm btn-danger" %>
      </div>
    </li>
  <% end %>
</ul>
