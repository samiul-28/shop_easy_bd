<h1>Order Details</h1>

<p><strong>Total:</strong> ৳ <%= @order.total_price %></p>
<p><strong>Status:</strong> <%= @order.status %></p>
<p><strong>Ordered at:</strong> <%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></p>

<h3>Items</h3>
<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name_en %></td>
        <td>৳ <%= item.price %></td>
        <td><%= item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
