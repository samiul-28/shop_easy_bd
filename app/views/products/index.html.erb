<h1><%= t('products.index.title') %></h1>

<div class="mb-3">
  <%= link_to t('products.index.new_product'), new_product_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3 mb-4">
      <div class="card">
        <% if product.image.attached? %>
          <%= image_tag product.image, class: "card-img-top", style: "height:200px; object-fit:cover;" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= I18n.locale == :bn ? product.name_bn : product.name_en %></h5>
          <p class="card-text">à§³ <%= product.price %></p>
          <%= link_to t('products.index.details'), product_path(product), class: "btn btn-sm btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% if @products.empty? %>
  <div class="alert alert-info">
    <%= t('products.index.no_products') %>
  </div>
<% end %>