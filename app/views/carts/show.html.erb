<h1>My Cart</h1>

<% if @cart_items.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name_en %></td>
          <td>
            <%= form_with(model: item, url: cart_item_path(item), method: :patch, local: true) do |f| %>
              <%= f.number_field :quantity, value: item.quantity, min: 1, class: "form-control" %>
              <%= f.submit "Update", class: "btn btn-sm btn-primary mt-1" %>
            <% end %>
          </td>
          <td>৳ <%= item.product.price * item.quantity %></td>
          <td>
            <%= button_to 'Remove', cart_item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><strong>Total:</strong> ৳ <%= @cart_items.sum { |i| i.product.price * i.quantity } %></p>
  <%= link_to 'Checkout', new_order_path, class: "btn btn-success" %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

